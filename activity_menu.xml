<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ucu.twentyfourseven.menu.MenuActivity">

    <ImageButton
        android:layout_height="150dp"
        android:layout_marginTop="61dp"
        android:id="@+id/btn_drinks"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_width="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/drinks"
        android:elevation="21dp" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/btn_snack"
        android:layout_alignTop="@+id/btn_drinks"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/snacks"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:elevation="20dp" />

    <TextView
        android:text="Drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/cardview_dark_background"
        android:layout_above="@+id/btn_snack"
        android:layout_toLeftOf="@+id/btn_local_food"
        android:layout_toStartOf="@+id/btn_local_food" />

    <TextView
        android:text="Snacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/cardview_dark_background"
        android:layout_above="@+id/btn_snack"
        android:layout_toRightOf="@+id/btn_local_food"
        android:layout_toEndOf="@+id/btn_local_food" />

    <TextView
        android:text="Local food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/cardview_dark_background"
        android:layout_below="@+id/btn_drinks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <ImageButton
        android:layout_height="150dp"
        android:id="@+id/btn_local_food"
        android:layout_width="120dp"
        android:background="@drawable/splatterback"
        android:elevation="24dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

</RelativeLayout>
